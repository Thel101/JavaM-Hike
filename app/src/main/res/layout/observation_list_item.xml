<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/recycler_view_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/ob_hike_name_view"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="35sp"
                android:textAlignment="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/observation_title_label"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:text="@string/observation_title"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/observation_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/observation_time_label"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:text="@string/observation_time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/observation_time_view"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/observation_comments_label"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:text="@string/observation_comments"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/observation_comments_view"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>