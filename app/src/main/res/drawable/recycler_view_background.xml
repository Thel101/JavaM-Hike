<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#ABE44B"/>
            <corners android:radius="15dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="2dp" />
            <item>
                <shape>
                    <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/> <!-- Set padding for shadow -->
                    <solid android:color="#33F33131"/> <!-- Set shadow color here -->
                    <corners android:radius="8dp"/> <!-- Set corner radius if needed for shadow shape -->
                </shape>
            </item>
        </shape>

    </item>
</selector>